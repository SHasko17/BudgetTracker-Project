<Window x:Class="BudgetTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget Tracker" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Összesítő panel -->
        <Border Grid.Row="0" Background="LightBlue" Padding="15" Margin="0,0,0,10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock Text="Összes bevétel" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalIncomeText" Text="0 Ft" FontSize="16" FontWeight="Bold" 
                               Foreground="Green" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock Text="Összes kiadás" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="TotalExpenseText" Text="0 Ft" FontSize="16" FontWeight="Bold" 
                               Foreground="Red" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock Text="Egyenleg" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="BalanceText" Text="0 Ft" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Kategória kezelés -->
        <GroupBox Grid.Row="1" Header="Kategória kezelés" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="NewCategoryTextBox" Grid.Column="0" Margin="0,0,10,0" />
                <Button x:Name="AddCategoryButton" Grid.Column="1" Content="Kategória hozzáadása" 
                        Margin="0,0,10,0" Click="AddCategory_Click"/>
                <Button x:Name="RemoveCategoryButton" Grid.Column="2" Content="Kategória törlése" 
                        Click="RemoveCategory_Click"/>
            </Grid>
        </GroupBox>

        <!-- Új tétel hozzáadása -->
        <GroupBox Grid.Row="2" Header="Új tétel hozzáadása" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Típus:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="TransactionTypeComboBox" Grid.Row="0" Grid.Column="1" Margin="0,0,10,0">
                    <ComboBoxItem Content="Bevétel"/>
                    <ComboBoxItem Content="Kiadás"/>
                </ComboBox>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Összeg:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="AmountTextBox" Grid.Row="0" Grid.Column="3" Margin="0,0,10,0"/>

                <TextBlock Grid.Row="0" Grid.Column="4" Text="Kategória:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="CategoryComboBox" Grid.Row="0" Grid.Column="5" Margin="0,0,10,0"/>

                <Button x:Name="AddTransactionButton" Grid.Row="0" Grid.Column="6" Content="Hozzáadás" 
                        Click="AddTransaction_Click"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Leírás:" VerticalAlignment="Center" Margin="0,10,5,0"/>
                <TextBox x:Name="DescriptionTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" 
                         Margin="0,10,10,0"/>
            </Grid>
        </GroupBox>

        <!-- Tranzakciók listája -->
        <GroupBox Grid.Row="3" Header="Tranzakciók">
            <DataGrid x:Name="TransactionsDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                      GridLinesVisibility="Horizontal" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Dátum" Binding="{Binding Date, StringFormat=yyyy.MM.dd}" Width="100"/>
                    <DataGridTextColumn Header="Típus" Binding="{Binding Type}" Width="80"/>
                    <DataGridTextColumn Header="Összeg" Binding="{Binding Amount, StringFormat={}{0:N0} Ft}" Width="100"/>
                    <DataGridTextColumn Header="Kategória" Binding="{Binding Category}" Width="150"/>
                    <DataGridTextColumn Header="Leírás" Binding="{Binding Description}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Gombok -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ImportButton" Content="Import Excel" Margin="0,0,10,0" 
                    Padding="10,5" Click="Import_Click"/>
            <Button x:Name="ExportButton" Content="Export Excel" Margin="0,0,10,0" 
                    Padding="10,5" Click="Export_Click"/>
            <Button x:Name="ClearAllButton" Content="Összes törlése" Margin="0,0,10,0" 
                    Padding="10,5" Click="ClearAll_Click" Background="IndianRed" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>